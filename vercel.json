{
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.7.1"
        }
    },
    "rewrites": [
        {
            "source": "/style.css",
            "destination": "/style.css"
        },
        {
            "source": "/(.*\\.js)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*\\.php)",
            "destination": "/api/$1"
        },
        {
            "source": "/",
            "destination": "/api/index.php"
        }
    ]
}