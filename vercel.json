{
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "rewrites": [
        {
            "source": "/",
            "destination": "/api/index.php"
        },
        {
            "source": "/(.*\\.php)",
            "destination": "/api/$1"
        }
    ]
}